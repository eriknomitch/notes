#!/bin/zsh

# ================================================
# REMINDERS ======================================
# ================================================

# ------------------------------------------------
# UTILITY ----------------------------------------
# ------------------------------------------------

# ------------------------------------------------
# MAIN -------------------------------------------
# ------------------------------------------------
_matches=`grep -E "^REM" $HOME/.notes/notes`

if [[ $# -gt 0 ]] ; then
  echo $_matches | \grep -i --color $1
  exit
fi

echo $_matches

