# ------------------------------------------------
# PATH -------------------------------------------
# ------------------------------------------------
# Append bin/ scripts to $PATH to make 'notes' script available.
export PATH=$PATH:$(dirname $0)/bin

# ------------------------------------------------
# AUTOCOMPLETION-RULES ---------------------------
# ------------------------------------------------
_notes_cpl() {
  reply=()
  for suffix in `notes --list` 
  do
    reply[$(($#reply+1))]=$suffix
  done
}

compctl -K _notes_cpl notes

